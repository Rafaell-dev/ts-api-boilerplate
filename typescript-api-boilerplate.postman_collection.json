	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"const authToken = pm.environment.get(\"auth_token\");\r",
					"const currentRequest = pm.info.requestName;\r",
					"\r",
					"const publicEndpoints = [\r",
					"    \"Login\",\r",
					"    \"Register\", \r",
					"    \"Forgot Password\",\r",
					"    \"Health Check\"\r",
					"];\r",
					"\r",
					"if (!publicEndpoints.includes(currentRequest)) {\r",
					"    if (authToken && !isTokenExpired(authToken)) {\r",
					"        pm.request.headers.add({\r",
					"            key: \"Authorization\",\r",
					"            value: `Bearer ${authToken}`\r",
					"        });\r",
					"        console.log(`✅ Token applied to ${currentRequest}`);\r",
					"    } else {\r",
					"        console.log(`⚠️ ${currentRequest}: No valid token available`);\r",
					"    }\r",
					"}\r",
					"\r",
					"function isTokenExpired(token) {\r",
					"    try {\r",
					"        const payload = JSON.parse(atob(token.split('.')[1]));\r",
					"        const currentTime = Math.floor(Date.now() / 1000);\r",
					"        return payload.exp < currentTime;\r",
					"    } catch (error) {\r",
					"        return true;\r",
					"    }\r",
					"}"
				]
			}
		},
