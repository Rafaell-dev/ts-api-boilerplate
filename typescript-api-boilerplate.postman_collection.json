		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Login successful\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"\r",
							"if (pm.response.code === 200) {\r",
							"    const responseJson = pm.response.json();\r",
							"    \r",
							"    if (responseJson.token) {\r",
							"        pm.environment.set(\"auth_token\", responseJson.token);\r",
							"        \r",
							"        // pm.globals.set(\"auth_token\", responseJson.token);\r",
							"        \r",
							"        console.log(\"✅ Token saved successfully:\", responseJson.token);\r",
							"        \r",
							"        if (responseJson.user) {\r",
							"            pm.environment.set(\"user_id\", responseJson.user.id);\r",
							"            pm.environment.set(\"user_email\", responseJson.user.email);\r",
							"            pm.environment.set(\"organization_id\", responseJson.user.organizationId);\r",
							"        }\r",
							"    } else {\r",
							"        console.log(\"❌ Token not found in response\");\r",
							"    }\r",
							"} else {\r",
							"    console.log(\"❌ Login failed\");\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
